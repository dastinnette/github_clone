<nav>
  <div class="nav-wrapper grey darken-3">
    <a href="#" class="brand-logo top-nav">BitPub</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li>
        <%= link_to "GitHub Profile", "https://github.com/#{current_user.nickname}", target: "_blank" %>
      </li>
      <li>
        <%= link_to "Logout", "/logout", method: "delete" %>
      </li>
    </ul>
  </div>
</nav>

<div class="row">
  <div class="container">
    <div class="col s4">
      <br>
      <%= image_tag current_user.image_url, class: "responsive-img profile-pic" %>
      <h4 class="home"> <%= current_user.name %> </h4>
      <h5 class="home"> <%= current_user.nickname %> </h5>
      <br>
      <h6 class="home"> <%= current_user.email %> </h6>
      <br>
      <h6 class="home"> Followers <%= @followers.count %> Starred <%= @stars.count %> Following <%= @followings.count %> </h6>
      <h6 class="home"> "Total Contributions" "Longest Streak" "Current Streak" </h6>
    </div>

    <div>
      <div class="col s4">
        <br>
        <h5 class="center">Your Repositories</h5>
        <div class="box collection">
          <table>
            <tbody>
              <% @repos.each do |repo| %>
                <tr>
                  <td><%= repo[:name] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col s4">
        <br>
        <h5 class="center">Recent Activity</h5>
        <div class="box">
          <table>
            <tbody>
              <% @repos.each do |repo| %>
                <tr>
                  <td><%= repo[:name] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <row class="col s8">

        <h5 class="center">Activity Feed</h5>
        <div class="box collection">
          <table>
            <tbody>
              <% @repos.each do |repo| %>
                <tr>
                  <td><%= repo[:name] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </row>

    </div>
  </div>
</div>
